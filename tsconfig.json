{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "ES6",
    "target": "ES2017",
    "jsx": "react-jsx",
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
